{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@Components/*": ["src/components/*"],
      "@Context/*": ["src/context/*"],
      "@Core/*": ["src/core/*"],
      "@Views/*": ["src/views/*"],
      "@Utils/*": ["src/utils/*"],
    },
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "include": ["src", "setupTests.js"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}