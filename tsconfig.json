{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@Components/*": ["components/*"],
      "@Components": ["components"],
      "@Context/*": ["context/*"],
      "@Context": ["context"],
      "@Core/*": ["core/*"],
      "@Core": ["core"],
      "@Utils/*": ["utils/*"],
      "@Utils": ["utils"],
      "@Views/*": ["views/*"],
      "@Views": ["views"]
    },
    "esModuleInterop": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  },
  "include": ["src", "setupTests.js"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}